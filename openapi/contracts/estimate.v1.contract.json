{
  "openapi": "3.0.3",
  "info": { "title": "JCW Estimator API", "version": "1.0.0" },
  "paths": {
    "/v1/estimate": {
      "post": {
        "summary": "Estimate costs (dual-shape: legacy or M01)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "oneOf": [
                {
                  "type": "object",
                  "required": ["area_sqft", "quality", "complexity"],
                  "properties": {
                    "area_sqft": { "type": "number" },
                    "quality": { "type": "string" },
                    "complexity": { "type": "string" }
                  }
                },
                {
                  "type": "object",
                  "required": ["quantities"],
                  "properties": {
                    "project_id": { "type": "string" },
                    "quantities": { "$ref": "../../schemas/trade_quantities.schema.json" },
                    "region": { "type": "string" },
                    "policy": { "type": "string" },
                    "unit_costs_csv": { "type": "string" },
                    "vendor_quotes_csv": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              ]}}
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "../../schemas/estimate_response.schema.json" }
              }
            }
          }
        }
      }
    }
  }
}
