{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "project_id": {
      "type": "string"
    },
    "coverage_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "trades_inferred": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "trade": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "item": {
                  "type": "string"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "signals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string"
                      },
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": ["type", "value"]
                  }
                }
              },
              "required": ["item", "confidence", "signals"]
            }
          }
        },
        "required": ["trade", "items"]
      }
    },
    "questions_ref": {
      "type": "string"
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["project_id", "coverage_score", "trades_inferred", "questions_ref"]
}
