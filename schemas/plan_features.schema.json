{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlanFeaturesV0",
  "type": "object",
  "required": ["doc", "sheets", "scales"],
  "properties": {
    "doc": {
      "type": "object",
      "required": ["file_name", "page_count", "page_sizes"],
      "properties": {
        "file_name": { "type": "string" },
        "page_count": { "type": "integer", "minimum": 0 },
        "page_sizes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "sheets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["page_no"],
        "properties": {
          "page_no": { "type": "integer", "minimum": 1 },
          "sheet_id": { "type": ["string", "null"] },
          "sheet_name": { "type": ["string", "null"] }
        }
      }
    },
    "scales": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["page_no", "raw"],
        "properties": {
          "page_no": { "type": "integer", "minimum": 1 },
          "raw": { "type": "string" },
          "normalized": { "type": ["string", "null"], "description": "normalized like 1/8in_per_ft or 1_to_100" }
        }
      }
    }
  }
}
